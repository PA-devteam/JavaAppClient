<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="screens.FXMLCreateController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="300.0" />
      <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label text="Name : " GridPane.rowIndex="2" />
      <Label text="Description :" GridPane.rowIndex="3" />
      <Label text="Elements : " textAlignment="CENTER" GridPane.rowIndex="4" />
      <TextField fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextArea fx:id="description" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <TextField fx:id="tfElementsCreate" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Button fx:id="btnCheckElementsCreate" onAction="#handleClick" mnemonicParsing="false"  text="Check" GridPane.columnIndex="2" GridPane.rowIndex="4" />
      <Button fx:id="btnValidCreate" mnemonicParsing="false"  onAction="#handleClick" text="Create" GridPane.columnIndex="2" GridPane.rowIndex="6" />
      <Button fx:id="btnCancelCreate" mnemonicParsing="false" onAction="#handleClick" text="Cancel" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
      <Label text="Create an equation" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
   </children>
</GridPane>
